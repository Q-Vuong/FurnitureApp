<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.auth.InforUserFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="850dp"
            android:background="@drawable/radius_tren_phai_trai"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hồ sơ"
                    android:textColor="@color/black"
                    android:textSize="38dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/edt_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Liên hệ"
                android:layout_marginStart="20dp"
                android:gravity="bottom"/>

            <EditText
                android:id="@+id/edt_fullName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="7dp"
                android:background="@drawable/edt"
                android:hint="Họ và tên"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:textColorHint="#E4E4E4" />
            <EditText
                android:id="@+id/edt_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="7dp"
                android:singleLine="true"
                android:background="@drawable/edt"
                android:hint="Số điện thoại"
                android:paddingLeft="10dp"
                android:textColorHint="#E4E4E4" />

            <AutoCompleteTextView
                android:id="@+id/autocomplete_gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="7dp"
                android:background="@drawable/edt"
                android:hint="Giới tính"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:textColorHint="#E4E4E4"
                android:focusableInTouchMode="false" />

            <EditText
                android:id="@+id/edt_birthday"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="7dp"
                android:singleLine="true"
                android:background="@drawable/edt"
                android:hint="Ngày sinh"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:textColorHint="#E4E4E4"
                android:focusableInTouchMode="false" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Địa chỉ"
                android:layout_marginStart="20dp"
                android:gravity="bottom"/>

            <EditText
                android:id="@+id/edt_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="7dp"
                android:singleLine="true"
                android:background="@drawable/edt"
                android:hint="Tỉnh/Thành phố, Quận/Huyện, Phường/Xã"
                android:paddingLeft="10dp"
                android:textColorHint="#E4E4E4" />

            <EditText
                android:id="@+id/edt_streetName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="7dp"
                android:singleLine="true"
                android:background="@drawable/edt"
                android:hint="Tên đường, Toà nhà, Số nhà"
                android:paddingLeft="10dp"
                android:textColorHint="#E4E4E4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">
                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/nut_dang_nhap"
                    android:gravity="center"
                    android:text="Để sau"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btn_finish"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/nut_dang_nhap"
                    android:gravity="center"
                    android:text="Hoàn tất"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>


</FrameLayout>