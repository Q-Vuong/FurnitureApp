<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.option_user.AddressFragment">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_left_arrow"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:text="Liên hệ"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:gravity="bottom"/>

    <EditText
        android:id="@+id/edt_fullName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="7dp"
        android:background="@drawable/edt"
        android:textColor="@color/black"
        android:hint="Họ và tên"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:textColorHint="#E4E4E4" />
    <EditText
        android:id="@+id/edt_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="7dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:background="@drawable/edt"
        android:hint="Số điện thoại"
        android:paddingLeft="10dp"
        android:textColorHint="#E4E4E4" />

    <AutoCompleteTextView
        android:id="@+id/autocomplete_gender"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="7dp"
        android:background="@drawable/edt"
        android:hint="Giới tính"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:textColorHint="#E4E4E4"
        android:focusableInTouchMode="false" />


    <EditText
        android:id="@+id/edt_birthday"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="7dp"
        android:singleLine="true"
        android:background="@drawable/edt"
        android:hint="Ngày sinh"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:textColorHint="#E4E4E4"
        android:focusableInTouchMode="false" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Địa chỉ"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:gravity="bottom"/>

    <EditText
        android:id="@+id/edt_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="7dp"
        android:background="@drawable/edt"
        android:textColor="@color/black"
        android:hint="Tỉnh/Thành phố, Quận/Huyện, Phường/Xã"
        android:paddingLeft="10dp"
        android:textColorHint="#E4E4E4" />

    <EditText
        android:id="@+id/edt_streetName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="7dp"
        android:singleLine="true"
        android:background="@drawable/edt"
        android:hint="Tên đường, Toà nhà, Số nhà"
        android:paddingLeft="10dp"
        android:textColorHint="#E4E4E4" />


    <Button
        android:id="@+id/btn_updateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/nut_dang_nhap"
        android:gravity="center"
        android:text="Cập nhật"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginTop="40dp" />

</LinearLayout>