<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scaleType="centerCrop"
    android:background="@drawable/erorrbg_01"
    android:padding="20dp"

    tools:context=".fragment.orders.AlertDialogFragment">

        <TextView
            android:id="@+id/tv_productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Không được để trống số điện thoại hoặc địa chỉ nhận hàng."
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="Hãy vào mục ''Tôi'' chọn ''Tài khoản'' và cập nhật thông tin ngay!"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="300dp"
            android:text="Xin lỗi vì sự bất tiện này!"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edt"
            android:backgroundTint="#1D61C6"
            android:text="Ok! Tôi hiểu rồi"
            android:textColor="@color/black"
            android:textSize="18sp" />



</LinearLayout>