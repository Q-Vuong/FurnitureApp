<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <link href="/css/component/navigation.css" rel="stylesheet">
  <link href="/css/component/breadcrumb.css" rel="stylesheet">
  <link href="/css/pages/banner.css" rel="stylesheet">
  <link href="/css/common/search-form.css" rel="stylesheet">
</head>

<body>

  <div class="container">
    {{#if successMessage}}
    <div class="alert alert-success" role="alert">
      {{successMessage}}
    </div>
    {{/if}}
    {{#if dangerMessage}}
    <div class="alert alert-danger" role="alert">
      {{dangerMessage}}
    </div>
    {{/if}}

    <div id="view-notification" style="display: block;">

      <div id="titles">
        <h5 class="mb-4">Danh sách thông báo</h5>
        <form id="searchForm">
          <input type="text" id="searchInput" placeholder="Nhập từ khóa..." required>
          <input type="image" src="/icons/search.png" alt="Tìm kiếm" id="searchButton">
        </form>
      </div>
      <hr class="mb-4">
      <a href="/notification/add-page" class="btn btn-primary eLink float-end mb-4">Thêm thông báo</a>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="col-1">STT</th>
            <th class="col-1">Loại thông báo</th>
            <th class="col-1">Tiêu đề</th>
            <th class="col-1">Hình ảnh</th>
            <th class="col-1">Nội dung</th>
            <th class="col-1">Thời gian</th>
            <th class="col-1">Tuỳ chọn</th>
          </tr>
        </thead>
        <tbody>
          {{#each notifications}}
          <tr>
            <td>{{@index}}</td> <!-- Hiển thị số thứ tự của thông báo -->
            <td>{{this.notificationType}}</td>
            <td>{{this.title}}</td>
            <td><img src="{{this.image}}" alt="Notification Image" style="max-width: 100px;"></td>
            <td>{{this.content}}</td>
            <td>{{this.date}}</td>
            <td>
              <a href="notification/update/{{this._id}}" class="btn btn-warning btn-sm eLink">Sửa</a>
              <a href="notification/delete/{{this._id}}" onclick="return confirmAction(event);"
                class="btn btn-danger btn-sm">Xoá</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>

  <script src="/js/notifications/loadPage_ntf.js"></script>
</body>

</html>