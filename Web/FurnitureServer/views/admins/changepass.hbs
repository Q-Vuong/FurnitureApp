<html lang="en">

<head>
    <title>Bootstrap 5 Example</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="/css/common/company-name.css" rel="stylesheet" />
    <link href="/css/auth/login.css" rel="stylesheet" />
    <link href="/css/common/form.css" rel="stylesheet" />
</head>

<body>

    <div class="container-fluid">
        <div class="row">

            <div class="col-md-6 left-views">
                <div class="wellcome-bg">
                    <div class="company">
                        <img src="/images/auth/img_login.jpg" class="company-img" alt="">
                        <p class="company-name">Company name</p>
                    </div>
                    <div class="wellcome-text">
                        <p>Thay đổi mật khẩu!</p>
                    </div>
                    <div class="wellcome-remind">
                        <p>Vui lòng đăng nhập đầy đủ thông tin để đổi mật khẩu.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <a href="/" onclick="return confirmAction(event);" class="btn btn-danger " style="float: right;">Huỷ</a>
                <div class="title">
                    {{#if dangerMessage}}
                    <div class="alert alert-danger" role="alert">
                        {{dangerMessage}}
                    </div>
                    {{/if}}
                    <h2>Đổi mật khẩu</h2>
                    <p>Chào mừng!</p>
                </div>
                <form action="/admin/changePassword" method="POST">
                    <div class="mb-4">
                        <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu cũ"
                            name="password">
                    </div>
                    <div class="mb-4">
                        <input type="password" class="form-control" id="newPassword" placeholder="Nhập mật khẩu mới"
                            name="newPassword">
                    </div>
                    <div class="mb-4">
                        <input type="password" class="form-control" id="rePassword" placeholder="Nhập lại mật khẩu mới"
                            name="rePassword">
                    </div>
                    <input type="submit" class="btn btn-secondary btn-auth" value="Thực hiện">
                </form>



            </div>

        </div>
    </div>
</body>

</html>